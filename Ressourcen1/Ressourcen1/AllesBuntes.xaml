<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Color x:Key="Firmenfarbe1">#FFF70000</Color>
  <SolidColorBrush x:Key="Füllung1" Color="{DynamicResource Firmenfarbe1}"/>
  <Color x:Key="Firmenfarbe2">#FFFBFD00</Color>
  <SolidColorBrush x:Key="Füllung2" Color="{DynamicResource Firmenfarbe2}"/>
  <LinearGradientBrush x:Key="Füllung3" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="{DynamicResource Firmenfarbe1}"/>
    <GradientStop Color="{DynamicResource Firmenfarbe2}" Offset="1"/>
  </LinearGradientBrush>

</ResourceDictionary>